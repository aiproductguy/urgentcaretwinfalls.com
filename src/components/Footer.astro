---
import CallToAction from './CallToAction.astro'
import { Icon } from 'astro-icon/components'

const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-8">
    <div class="container flex justify-between items-center">
      <div class="flex flex-col sm:flex-row sm:items-center">
        <p class="mr-4">
          &copy; {currentYear} Urgent Care of Twin Falls.
        </p>
        <a href="/privacy-statement/" class="text-primary-500 hover:underline">Privacy Statement</a>
      </div>
      <div class="flex items-center gap-4">
        <a href="tel:2087336700" class="text-primary-500 hover:text-primary-600" aria-label="Call us">
          <Icon name="mdi:phone" class="text-xl" />
        </a>
        <a href="/#location" class="text-primary-500 hover:text-primary-600" aria-label="Get directions">
          <Icon name="mdi:map-marker" class="text-xl" />
        </a>
      </div>
    </div>
  </section>
</footer>
